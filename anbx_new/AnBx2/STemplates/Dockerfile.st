FROM ubuntu:latest

# Install JDK, JRE, and required networking software
RUN apt-get update && apt-get install -y iptables tcpdump iputils-ping net-tools iproute2 nano apt-utils openjdk-21-jdk-headless openjdk-21-jre-headless ant
# set JAVA_HOME and BouncyCastleProvider
ENV JAVA_HOME=/usr/lib/jvm/java-21-openjdk-amd64
RUN export JAVA_HOME
RUN	echo 'security.provider.13=org.bouncycastle.jce.provider.BouncyCastleProvider' >> \$JAVA_HOME/conf/security/java.security
# RUN cat \$JAVA_HOME/conf/security/java.security
CMD bash
